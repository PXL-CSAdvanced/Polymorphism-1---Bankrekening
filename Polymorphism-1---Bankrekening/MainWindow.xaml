<Window x:Class="Polymorphism_1___Bankrekening.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Polymorphism_1___Bankrekening"
        mc:Ignorable="d"
        Title="Overzicht bankrekening" Height="400" Width="600">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="2*"/>
            <RowDefinition Height="2*"/>
        </Grid.RowDefinitions>
        <Grid Grid.Row="0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="3*"/>
                <ColumnDefinition Width="2*"/>
            </Grid.ColumnDefinitions>
            <GroupBox x:Name="CreditDebitGroupBox" Header="Storing(+)/Opname(-)" Grid.Row="0" Grid.Column="0" Margin="10">
                <Grid>
                    <TextBox x:Name="amountTextBox" HorizontalAlignment="Left" VerticalAlignment="Center" Height="23" Margin="10 0 0 0" Text="500" Width="70"/>
                </Grid>
            </GroupBox>
            <Grid Grid.Row="0" Grid.Column="1" Margin="10">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>
                <Button x:Name="balanceButton" Content="Saldo" Grid.Row="0" Grid.Column="0" Margin="10" Click="balanceButton_Click"/>
                <Button x:Name="interestButton" Content="Rente" Grid.Row="0" Grid.Column="1" Margin="10" Click="interestButton_Click"/>
                <Button x:Name="closeButton" Content="Afsluiten" Grid.Row="0" Grid.Column="2" Margin="10" Click="closeButton_Click"/>
            </Grid>
        </Grid>
        <GroupBox x:Name="CurrentAccountGroupBox" Header="Zichtrekening" Grid.Row="1" Margin="10">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>
                <Label x:Name="CurrentAccountDescriptionLabel" Content="" Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="2" VerticalAlignment="Center"/>
                <Label x:Name="CurrentAccountBalanceLabel" Content="Huidig saldo:" Grid.Row="1" Grid.Column="0" VerticalAlignment="Center"/>
                <Label x:Name="CurrentAccountInterestLabel" Content="Rente:" Grid.Row="2" Grid.Column="0" VerticalAlignment="Center"/>
                <Label x:Name="CurrentAccountBalanceValueLabel" Content="" Grid.Row="1" Grid.Column="1" VerticalAlignment="Center"/>
                <Label x:Name="CurrentAccountInterestValueLabel" Content="" Grid.Row="2" Grid.Column="1" VerticalAlignment="Center"/>
            </Grid>
        </GroupBox>
        <GroupBox x:Name="SavingsAccountGroupBox" Header="Spaarrekening" Grid.Row="2" Margin="10">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>
                <Label x:Name="SavingsAccountDescriptionLabel" Content="" Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="2" VerticalAlignment="Center"/>
                <Label x:Name="SavingsAccountBalanceLabel" Content="Huidig saldo:" Grid.Row="1" Grid.Column="0" VerticalAlignment="Center"/>
                <Label x:Name="SavingsAccountInterestLabel" Content="Rente:" Grid.Row="2" Grid.Column="0" VerticalAlignment="Center"/>
                <Label x:Name="SavingsAccountBalanceValueLabel" Content="" Grid.Row="1" Grid.Column="1" VerticalAlignment="Center"/>
                <Label x:Name="SavingsAccountInterestValueLabel" Content="" Grid.Row="2" Grid.Column="1" VerticalAlignment="Center"/>
            </Grid>
        </GroupBox>
    </Grid>
</Window>